<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginTop="80dp"
    android:layout_gravity="center"
    tools:context=".BreakRecordFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:background="#FFFF">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="358dp"
            android:layout_height="161dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/title_broken_record" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/massage_enter_name"
        android:gravity="center"
        android:textSize="20dp"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/but_save"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#D1CAC6"
            android:textColor="#f56e11"
            android:id="@+id/bottomSaveRecord"
            android:layout_gravity="center" />

</LinearLayout>

</FrameLayout>