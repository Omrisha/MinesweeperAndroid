<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndGame">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:src="@drawable/you_lose"
            android:id="@+id/im2"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_height="300dp"
            android:layout_width="400dp"/>

        <ImageView
            android:src="@drawable/you_win"
            android:id="@+id/im1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_height="300dp"
            android:layout_width="400dp"/>


        <Button
            android:id="@+id/buttonPlayAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/buttonExit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:minWidth="100dp"
            android:background="@color/play_again_button"
            android:textColor="#FFFF"
            android:text="@string/but_playAgain"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="300dp" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:minWidth="100dp"
            android:background="@color/exit_button"
            android:textColor="#FFFF"
            android:layout_marginBottom="-00dp"
            android:text="@string/but_exit"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="350dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>